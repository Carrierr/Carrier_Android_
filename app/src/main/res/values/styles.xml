<resources>
    
    <!-- Base application theme. -->
    <style name = "AppTheme"
        parent = "Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name = "windowActionModeOverlay">true</item>
        <item name = "android:textViewStyle">@style/TextViewStyle</item>
        <item name = "colorPrimary">@color/colorPrimary</item>
        <item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name = "colorAccent">@color/colorAccent</item>
        <item name = "android:windowFullscreen">true</item>
    </style>
    
    <style name = "TextViewStyle"  parent = "android:Widget.TextView">>
        <item name = "android:textColor">@color/colorMainBlack</item>
    </style>
    
    <style name = "SplashTheme"
        parent = "Theme.AppCompat.NoActionBar">
        <item name = "android:windowBackground">@drawable/splash_background</item>
    </style>
    
    <style name = "ToolbarMainTextView">
        <item name = "android:gravity">center</item>
        <item name = "android:textColor">#242424</item>
        <item name = "android:textSize">14sp</item>
        <item name = "android:fontFamily">@font/montserrat_regular</item>
    </style>
    
    <style name = "MainDateText">
        <item name = "android:fontFamily">@font/montserrat_light</item>
        <item name = "android:textColor">#252525</item>
    </style>
    
    <style name = "SettingCardView">
        <item name = "android:layout_height">wrap_content</item>
        <item name = "cardElevation">0dp</item>
        <item name = "android:layout_width">match_parent</item>
    </style>
    
    <style name = "SettingRadioButton">
        <item name = "android:padding">12dp</item>
        <item name = "android:button">@null</item>
        <item name = "android:fontFamily">@font/ko_pub_dotum_pl</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:textColor">@drawable/selector_radio</item>
    </style>
    
    <style name = "SettingTextView">
        <item name = "layout_constraintBottom_toBottomOf">parent</item>
        <item name = "layout_constraintStart_toStartOf">parent</item>
        <item name = "android:fontFamily">@font/ko_pub_dotum_pl</item>
        <item name = "layout_constraintTop_toTopOf">parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:textColor">#252525</item>
        <item name = "android:textSize">13sp</item>
    </style>
    
    <style name = "SuperActivityToast_Progress_ProgressBar"
        parent = "android:Widget.Holo.ProgressBar">
        <item name = "android:layout_width">32dp</item>
        <item name = "android:layout_marginLeft">8dp</item>
    </style>
    
    <style name = "DiaryWritingTheme"
        parent = "Theme.AppCompat.Light.NoActionBar">
        <item name = "windowActionBar">false</item>
        <item name = "windowNoTitle">true</item>
    </style>

</resources>
