<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name = "adapter"
            type = "me.tiptap.tiptap.scratch.SharingAdapter"
            />

        <import
            alias = "View"
            type = "android.view.View"
            />

        <variable
            name = "sharing"
            type = "me.tiptap.tiptap.data.Sharing"
            />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width = "match_parent"
        android:layout_height = "90dp"
        android:layout_marginBottom = "2dp"
        android:background = "@android:color/white"
        android:padding = "14dp"
        >

        <TextView
            android:id="@+id/viewLine"
            android:layout_width="17dp"
            android:layout_height="1dp"
            tools:text = "-"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop = "10dp"/>

        <TextView
            android:id="@+id/text_sharing_day"
            day="@{sharing.date}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/viewLine"
            app:layout_constraintTop_toTopOf="parent"
            tools:text = "11:30"
            android:textSize = "12sp"
            app:layout_constraintVertical_bias="0.0"
            android:fontFamily="@font/montserrat_regular"/>

        <TextView
            android:id = "@+id/text_sharing_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart = "19dp"
            tools:text = "#1"
            app:layout_constraintStart_toEndOf="@+id/text_sharing_day"
            android:textSize = "12sp"
            android:fontFamily="@font/montserrat_regular"/>

        <TextView
            android:id = "@+id/text_sharing_location"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "19dp"
            app:layout_constraintTop_toBottomOf="@+id/text_sharing_day"
            app:layout_constraintLeft_toRightOf = "@+id/text_sharing_day"
            tools:text = "키오스크 카페"
            android:layout_marginTop = "2dp"
            android:text = "@{sharing.location}"
            android:textSize = "14sp"
            android:fontFamily="@font/ko_pub_dotum_pb"
            android:textStyle="bold"
            />

        <TextView
            android:id = "@+id/text_sharing_content"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:text = "@{sharing.content}"
            android:layout_marginTop = "14dp"
            tools:text = "오늘 나는 카페에 갔다."
            app:layout_constraintTop_toBottomOf="@+id/text_sharing_location"
            app:layout_constraintLeft_toLeftOf = "@+id/text_sharing_num"
            android:fontFamily="@font/ko_pub_dotum_pl"
            />

    </android.support.constraint.ConstraintLayout>
</layout>