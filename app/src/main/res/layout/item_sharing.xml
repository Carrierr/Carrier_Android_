<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name = "adapter"
            type = "me.tiptap.tiptap.scratch.SharingAdapter"
            />

        <import
            alias = "View"
            type = "android.view.View"
            />

        <variable
            name = "sharing"
            type = "me.tiptap.tiptap.data.Sharing"
            />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginBottom = "60dp"
        android:background = "@android:color/transparent"
        android:padding = "14dp"
        >

        <View
            android:id="@+id/viewLine"
            android:layout_width="17dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_sharing_day"
            time="@{sharing.date}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/viewLine"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize = "12sp"
            app:layout_constraintVertical_bias="0.0"
            android:fontFamily="@font/montserrat_regular"/>

        <TextView
            android:id = "@+id/text_sharing_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart = "21dp"
            android:text = "@{sharing.num}"
            app:layout_constraintStart_toEndOf="@+id/text_sharing_day"
            android:textSize = "12sp"
            android:fontFamily="@font/montserrat_regular"
            android:lineSpacingExtra="10sp"/>

        <TextView
            android:id = "@+id/text_sharing_location"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_sharing_day"
            app:layout_constraintLeft_toLeftOf = "@+id/text_sharing_num"
            android:layout_marginTop = "10dp"
            android:text = "@{sharing.location}"
            android:textSize = "14sp"
            android:fontFamily="@font/ko_pub_dotum_pb"
            android:textStyle="bold"
            android:lineSpacingExtra="2sp"
            android:textColor = "#242424" />

        <TextView
            android:id = "@+id/text_sharing_content"
            android:layout_width = "238dp"
            android:layout_height = "wrap_content"
            android:text = "@{sharing.content}"
            android:layout_marginTop = "14dp"
            app:layout_constraintTop_toBottomOf="@+id/text_sharing_location"
            app:layout_constraintLeft_toLeftOf = "@+id/text_sharing_num"
            android:fontFamily="@font/ko_pub_dotum_pl"
            android:lineSpacingExtra="10sp"
            android:textColor = "#242424"
            />

    </android.support.constraint.ConstraintLayout>
</layout>