<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name = "adapter"
            type = "me.tiptap.tiptap.scratch.SharingAdapter"
            />

        <import
            alias = "View"
            type = "android.view.View"
            />

        <variable
            name = "sharing"
            type = "me.tiptap.tiptap.data.Sharing"
            />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width = "match_parent"
        android:layout_height = "90dp"
        android:layout_marginBottom = "2dp"
        android:layout_marginStart = "50dp"
        android:background = "@android:color/white"
        android:padding = "14dp"
        >


        <TextView
            android:id="@+id/text_diary_day"
            day="@{sharing.date}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id = "@+id/text_diary_location"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "10dp"
            android:maxLines = "1"
            android:text = "@{sharing.location}"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            />

        <TextView
            android:id = "@+id/text_diary_content"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:text = "@{sharing.content}"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "@+id/text_diary_day"
            />

    </android.support.constraint.ConstraintLayout>
</layout>