<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text = "Route"
            android:textSize = "28sp"
            android:textStyle="bold"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"
            android:id = "@+id/text_route"/>
        <TextView
            android:id = "@+id/text_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "완료"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:textStyle="bold"
            android:layout_marginTop="13dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_route"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id = "@+id/date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/text_location"
            android:layout_below = "@+id/date"
            android:layout_centerHorizontal="true"
            android:text = "위치설정"
            android:clickable="true"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/text_location"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/img_myPicture"
                android:adjustViewBounds="true"/>

            <EditText
                android:id="@+id/edit_diary_write"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below = "@+id/img_myPicture"
                android:gravity = "top"
                android:background="@android:color/transparent"
                android:hint="당신의 여행 이야기를 적어주세요."
                android:inputType="textCapSentences|textMultiLine" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/text_location"
            android:background="#FFFFFF">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id = "@+id/img_lock"
                    android:layout_width="30dp"
                    android:tint = "@android:color/darker_gray"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/padlock" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id = "@+id/text_priv"
                    android:text = "비공개"
                    android:layout_toRightOf="@+id/img_lock"
                    android:layout_centerVertical="true"
                    android:textSize = "15sp"/>
                <ImageView
                    android:id = "@+id/img_gallery"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src = "@drawable/gallery"
                    android:tint = "@android:color/darker_gray"
                    android:clickable="true"
                    android:layout_toRightOf="@+id/text_priv"
                    android:layout_margin = "10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight = "true"
                    android:id = "@+id/text_keyboard"
                    android:layout_centerVertical="true"
                    android:textSize = "15sp"
                    android:layout_margin = "10dp"/>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

</layout>